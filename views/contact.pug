extends base.pug

block scripts
    script(src="../static/index.js")
block style
    style
        include ../static/style.css
        include ../static/contact.css
block content
    div#contact-form
        h1 Contact Us
            form(action="/contact", method = "post", class = "myForm")
                input(type="text", name="name", class = "myInput", placeholder = "Enter Your Name") 
                input(type="email", name="email", class = "myInput", placeholder = "Enter Your Email") 
                input(type="phone", name="phone", class = "myInput", placeholder = "Enter Your Contact") 
                input(type="text", name="address", class = "myInput", placeholder = "Enter Your Address") 
                input(type="text", name="desc", class = "myInput", placeholder = "Something More about You...")
                button(class="btn")
                    |Submit